# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

POST    /tasks/create        controllers.TaskController.createTask()
GET    /tasks/all            controllers.TaskController.getAllTasks
GET     /tasks/:id           controllers.TaskController.getTaskById(id: String)
DELETE /tasks/:id        controllers.TaskController.deleteTask(id: String)
POST   /tasks/:id/update    controllers.TaskController.updateTask(id: String, request: play.mvc.Http.Request)
POST    /login                controllers.AuthenticationController.login(request: play.mvc.Http.Request)
GET     /verifyToken     controllers.AuthenticationController.verifyToken(request: play.mvc.Http.Request)